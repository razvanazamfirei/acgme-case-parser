{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "css": {
    "parser": {
      "cssModules": false,
      "allowWrongLineComments": true,
      "tailwindDirectives": true
    },
    "formatter": {
      "enabled": false
    },
    "linter": {
      "enabled": false
    }
  },
  "files": {
    "maxSize": 2097152,
    "includes": [
      "**",
      "!!**/dist",
      "!!**/node_modules",
      "!!**/*.min.js",
      "!!**/public/xlsx.min.js"
    ]
  },
  "overrides": [
    {
      "includes": ["src/popup/popup.css"],
      "linter": {
        "enabled": false
      },
      "formatter": {
        "enabled": false
      }
    }
  ]
}
